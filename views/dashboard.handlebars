<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Get A Job</h1>
    <br />
    <br />
    <h4 class="lead">Welcome,
      {{name}}. Please fill out the form in order to create a post.</h4>
  </div>
</div>
<br />
<form class="new-post">
  <div class="form-group">
    <label for="formGroupExampleInput", "post-title">Title:</label>
    <input
      type="text"
      class="form-control"
      id="formGroupExampleInput", "post-title"
      name="post-title"
      placeholder="Please enter the Title of the post."
    />
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2", "post-description">Description:</label>
    <input
      type="text"
      class="form-control"
      id="formGroupExampleInput2", "post-description"
      name="post-description"
      placeholder="Please enter a description."
    />
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control" placeholder="Pay" id="post-pay" name="post-pay"/>
    </div>
    <div class="col">
      <input type="text" class="form-control" placeholder="Date" id="post-date" name="post-pay"/>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary" id="post-create">Create</button>
    </div>
  </div>
</form>

{{#each postData}}
  <div class="container">
    <div class="col-md-12 col-lg-12">
      <article class="post vt-post">
        <div class="row">
          <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
            <div class="post-type post-img">
              <img
                src="{{this.user.profilePic}}"
                width="325"
                class="img-responsive"
                alt="image post"
              />
            </div>
            <div class="author-info author-info-2">
              <ul class="list-inline">
                <li>
                  <div class="info" width="200">
                    <p>Posted on:</p>
                    <strong>{{this.date_created}}</strong></div>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
            <div class="caption">
              <h3 class="md-heading"><a href="#">{{this.title}}</a></h3>
              <p> {{this.description}} </p>
              <a
                class="btn btn-default"
                href="/postdetail{{this.id}}"
                role="button"
              >Read More</a>
            </div>
          </div>
        </div>
      </article>
      <div class="clearfix"></div>
    </div>
  </div>
{{/each}}

<script src="/public/js/dashboard.js"></script>