<section id="main-container">
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Get A Job</h1>
    <br />
    <br />
    <h4 class="lead" id="dashboard-owner">Welcome, 
      {{this.name}} Please fill out the form in order to create a post.</h4>
  </div>
</div>
<br />
<form class="new-form-handler">
  <div class="form-group">
    <label for="formGroupExampleInput", "post-title">Title:</label>
    <input
      type="text"
      class="form-control"
      id="formGroupExampleInput", "post-title"
      name="post-title"
      placeholder="Please enter the Title of the post."
    />
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2", "post-description">Description:</label>
    <input
      type="text"
      class="form-control"
      id="formGroupExampleInput2", "post-description"
      name="post-description"
      placeholder="Please enter a description."
    />
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control" placeholder="Pay" id="post-pay" name="post-pay"/>
    </div>
    <div class="col">
      <input type="text" class="form-control" placeholder="Date" id="post-date" name="post-pay"/>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary" id="post-create">Create Post</button>
    </div>
  </div>
</form>

{{#each dashboard.post as |posts|}}
{{>post-partial}}
{{/each}}
</section>

<script src="/public/js/dashboard.js"></script>