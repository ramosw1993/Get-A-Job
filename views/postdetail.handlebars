
<div class="container">
  <div class="col-md-12 col-lg-12">
    <article class="post vt-post">
      <div class="row">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
          <div class="post-type post-img">
            <img
                src="{{userPosts.user.profilePic}}"
                width="325"
                class="img-responsive"
                alt="image post"
              />
          </div>
          <div class="author-info author-info-2">
            <ul class="list-inline">
              <li>
                <div class="info" width="200">
                  <p>Posted on:</p>
                  <strong>{{userPosts.dateCreated}}</strong></div>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
          <div class="caption">
            <h3 class="md-heading">{{userPosts.title}}</h3>
            <h4>{{userPosts.user.name}}</h4>
                <p>
                    {{userPosts.description}}
                </p>
                <p>
                    $ {{userPosts.pay}} /Hour
                </p>
            <a class="btn btn-default" href="/profile/{{userPosts.userId}}" role="button">View Profile</a>
          </div>
        </div>
      </div>
    </article>
    <div class="clearfix"></div>
  </div>
</div>